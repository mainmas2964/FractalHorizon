#version 430 core

layout(location = 0) in vec3 aPos;
layout(location = 1) in vec2 aUV;
layout(location = 2) in vec3 aNormal;

uniform mat4 uMVP;
uniform mat4 uModel; // если нужно преобразовать нормаль в world space

out vec3 vNormal;
out vec2 vUV;

void main() {
    vUV = aUV;
    // If you have model matrix, transform normal properly: vNormal = mat3(transpose(inverse(uModel))) * aNormal;
    vNormal = normalize(aNormal);
    gl_Position = uMVP * vec4(aPos, 1.0);
}
