#version 430 core

in vec2 vUV;
flat in uint vLight;

out vec4 FragColor;

uniform vec3 u_color;

void main() {
    // debug: tint by UV and a constant color, optionally mod by light
    float l = float(vLight) * 0.1; // пример использования света
    vec3 base = u_color * (0.5 + 0.5 * vec3(vUV, 0.0));
    FragColor = vec4(clamp(base + l, 0.0, 1.0), 1.0);
}
